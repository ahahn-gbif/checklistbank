<configuration>

  <property name="defaultPattern" value="%-5level [%date{'yyyy-MM-dd HH:mm:ss,SSSZ'}] [%thread] %logger: %msg%node%xEx"/>

  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${defaultPattern}</pattern>
    </encoder>
  </appender>


  <logger name="org.gbif" level="INFO"/>

  <!--
  <logger name="org.gbif.checklistbank.index" level="DEBUG" />
  <logger name="org.apache.solr" level="INFO" />
  -->

  <root level="WARN">
    <appender-ref ref="CONSOLE"/>
  </root>
</configuration>
